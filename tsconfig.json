{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["@tsconfig/next/tsconfig.json", "@tsconfig/strictest/tsconfig.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "downlevelIteration": true,
    "paths": {
      "~*": ["./src/*"],
      "@/*": ["./*"],
      "@numize/ui/*": ["../../packages/ui/src/*"]
    },
    "checkJs": false,
    "strictNullChecks": true,
    "target": "es6",
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "preserve",
    "jsxImportSource": "react",
    "strict": true, // turn on strict typing
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "env.d.ts", "**/*.d.ts", "**/*.json", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
